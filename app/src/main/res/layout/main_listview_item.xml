<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:padding="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/MainfriendImage"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:civ_border_width="2dp"
        android:src="@mipmap/ic_launcher_round"/>

    <LinearLayout
        android:padding="5dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <TextView
            android:id="@+id/MainfriendName"
            android:text="Friend Name"
            android:textSize="25sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/MainMessageTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="3:00 pm"
                android:layout_alignRight="@id/MainfriendName"
                android:layout_alignEnd="@id/MainfriendName" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/MainSendIcon"
                android:padding="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/sentsmall"
               />
        <TextView
            android:id="@+id/MainFriendMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Message"
            android:textSize="20dp"/>
        </LinearLayout>
    </LinearLayout>



</LinearLayout>